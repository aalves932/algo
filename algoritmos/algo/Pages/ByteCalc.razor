@page "/byte_calc"

<h3>Calculadora de Bytes</h3>

<div class="form-group row mt-4 pt-3 pb-5 rounded bg-gradient-calc itens-center">
    <h5 class="mt-4">Conversão de medidas informáticas</h5>

    <div class="row">
        <div class="col-12 col-sm-6 col-md-6">
            <div class="row">
                <div class="col-6 col-sm-4 col-md-4 col-lg-4  mt-3 text-center">
                    <label class="form-label">Valor</label>
                    <input @bind="inputValue" type="number" class="form-control input-lg text-center">
                </div>
                <div class="col-6 col-sm-8 col-md-6 mt-3 text-center">
                    <label class="form-label">Unidade</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Escolha a unidade</option>
                        <option value="1">bits</option>
                        <option value="2">bytes</option>
                        <option value="3">kilobytes</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-6">
            <p class="mt-4">Resultado</p>
            <p class="mt-4 p-0 m-0">1 byte = 8 bits</p>
            <p class="mt-4 m-0 p-0">1 byte = 8 bits</p>
            <p class="mt-4">1 byte = 8 bits</p>
            <p class="mt-4">1 byte = 8 bits</p>
            <p class="mt-4">1 Terabyte = 1024 gigabytes (GB)</p>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-2 col-md-3 col-sm-4 mt-5 text-center">
            <button class="btn btn-primary m-auto" @onclick="calculate">Calcular</button>
        </div>
    </div>
</div>

